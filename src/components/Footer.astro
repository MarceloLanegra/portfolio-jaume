---
import Logo from "./Logo.astro";
import Social from "./Social.astro";
import Heart from "./icons/Heart.astro";

const year = new Date().getFullYear();
---

<footer class='flex flex-col gap-6 items-center justify-center text-white md:flex-row md:justify-between'>
  <Logo className="hidden md:block"/>
  <Social className="md:order-last"/>
  <div class='flex flex-col gap-2 md:flex-row'>
    <p class='flex justify-center gap-1'>Hecho con <span class="inline"><Heart className="size-6"/></span>de Jaume.</p>
    <p class='text-center'>Copyright {year} - Todos los derechos reservados.</p>
  </div>
</footer>
