---
import '@fontsource-variable/onest'
import Header from '../components/Header.astro'
import Footer from '../components/Footer.astro'

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="font-onest text-primary text-base leading-relaxed bg">
		<div class="px-4 pb-6 md:max-w-6xl mx-auto md:px-6">
			<Header />
			<slot />
			<Footer />
		</div>
	</body>
</html>
<style>
	body{
		background: radial-gradient(41.48% 11.48% at 2.38% 8.52%, #747DE9 0%, rgba(255, 255, 255, 0) 100%), linear-gradient(135deg, #72EDF2 0%, #5151E5 100%);
		box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
	}
</style>